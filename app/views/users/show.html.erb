<% if current_user == @user %>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="page-header" style="overflow-hidden">
        <div class="">
          <%= image_tag @user.image_url, class: "img-circle" %><br>
          <%= @user.short_name %>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Previous Prompts</h3>
        </div>
        <ul class="list-group">
          <li class="list-group-item">
            Other than startup pitches, where else might Saucepan be used? (20 Replies)
            <i class="fa fa-chevron-down pull-right"></i>
            <hr/>
            <ul class="list-inline">
              <li><i class="fa fa-calendar"></i> Mar 20, 2014</li>
              <li><i class="fa fa-reply"></i> 20 Replies</li>
              <li><i class="fa fa-location-arrow"></i> Starter School</li>
            </ul>
            <hr/>
            <ul class="list-group">
              <li class="list-group-item">Answer 1</li>
              <li class="list-group-item">Answer 2</li>
            </ul>
          </div>
        </div>
      </div>

      <% else %>

      <div class="container">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <div class="page-header" style="overflow-hidden">
              <div class="">
                <%= image_tag @user.image_url, class: "img-circle" %><br>
                <%= @user.short_name %> <h5>Wants your feedback on the below:</h5>
              </div>
            </div>
            <% open_prompt = @user.prompts.last %>
            <%= open_prompt.question %>
            <% @response = Response.new(:prompt_id => open_prompt.id) %>
            <hr/>
            <%= render 'responses/form', { :@response => @response} %>
          </div>
        </div>
      </div>

      <% end %>


