.header-text {
  color: #37BA91;
  font-weight: 600;
  text-shadow: 1px 1px rgba(0,0,0,.5);
  line-height: 48px;
}

.header-subtext {
  color: white;
  size: 22px;
}

@-webkit-keyframes fade-in-up {
  0% {opacity: 0; transform: translateY(2em);}
  100% {opacity: 1; transform: translateY(0em);}
}

@keyframes fade-in-up {
  0% {opacity: 0; transform: translateY(2em);}
  100% {opacity: 1; transform: translateY(0em);}
}

.landing-page-action {
  -webkit-animation: fade-in-up 2s 1 ease-out;
  animation: fade-in 2s 1 ease-out;
}

.home-page-landing {
  display: table;
  width: 100%;
  height: 105vh;
  margin-top: -55px;
  background-size: cover;
  background-repeat: none;
  background-image: url(<%= asset_path('startup-pitch-2.jpg') %>);
}

.landing-page-section,
.landing-page-section.alt-section {
  padding-top: 15px;
  padding-bottom: 15px;

  p, li {
    font-size: 16px;
  }
}

.alt-section {
   background-color: #f7f7f7;
}

.icon-wrapper {
  width: 75px;
  height: 75px;
}

.landing-icon {
 background-color: #37BA91;
 padding: 30px;
 border-radius: 50%;
 font-size: 40px;
 color: #f7f7f7;
}
